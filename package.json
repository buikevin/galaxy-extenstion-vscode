{
  "name": "galaxy-code-vscode",
  "displayName": "Galaxy Code",
  "description": "AI-powered coding assistant with chat interface for VSCode",
  "version": "0.1.0",
  "publisher": "galaxy",
  "icon": "resources/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/buikevin/galaxy-extenstion-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/buikevin/galaxy-extenstion-vscode/issues"
  },
  "homepage": "https://github.com/buikevin/galaxy-extenstion-vscode#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Programming Languages"
  ],
  "keywords": [
    "ai",
    "assistant",
    "chat",
    "code-generation",
    "productivity"
  ],
  "activationEvents": [
    "onCommand:galaxy-code.openChat"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "galaxy-code.openChat",
        "title": "Galaxy Code: Open new Tab",
        "category": "Galaxy Code"
      }
    ],
    "keybindings": [
      {
        "command": "galaxy-code.openChat",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "galaxy-code-sidebar",
          "title": "Galaxy Code",
          "icon": "resources/icon.png"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run build",
    "build": "bun run compile && bun run build:webview",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:webview": "vite build",
    "dev:webview": "vite",
    "package": "vsce package",
    "lint": "eslint src --ext ts",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.50.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@google/generative-ai": "^0.21.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "marked": "^11.0.0",
    "highlight.js": "^11.9.0"
  }
}
